datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
generator client {
  provider = "prisma-client-js"
}



model Twin {
  id           String   @id @default(uuid())
  createdBy    String?
  specURL      String
  capabilities String
  eventMeshURL String   @default("ws://localhost:5000")  // NEW
  registeredAt DateTime @default(now())

   @@index([createdBy])
  @@unique([id, createdBy])
}
